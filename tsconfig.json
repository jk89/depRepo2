{
    "compilerOptions": {
        "module": "commonjs",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "target": "es2015",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "typeRoots" : [
          "./node_modules/@types"
        ],
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
      "src/**/*.ts",
      "src/*.ts",
      "src/**/**/*.ts",
      "**/*"
    ],
    "exclude": [
      "node_modules",
      "demo",
      "test"
    ],
    "typeRoots": [
        "node_modules/json-d-ts"
      ]
  }
  